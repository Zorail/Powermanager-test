<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- *********************** Input Fields  *********************** -->
    <style name="InputField" parent="Widget.AppCompat.EditText" />

    <style name="InputField.Credential">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_widget_margin</item>
        <item name="android:layout_marginRight">@dimen/horizontal_widget_margin</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="InputField.Credential.Name">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="InputField.Credential.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <!-- *********************** Labels  *********************** -->
    <style name="Label">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:alpha">.86</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="Label.CredentialHeader">
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Label.CardHeader" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Label.CardSub" >
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Label.Sub">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_widget_margin</item>
        <item name="android:layout_marginRight">@dimen/horizontal_widget_margin</item>
    </style>
</resources>